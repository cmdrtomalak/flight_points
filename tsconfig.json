{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "bun-types"
        ]
    },
    "include": [
        "src/**/*",
        "config.ts"
    ],
    "exclude": [
        "node_modules",
        "frontend"
    ]
}