# Server Configuration
# BACKEND_PORT: The port the Bun backend server will run on (default: 3000)
BACKEND_PORT=3000
# FRONTEND_PORT: The port the SolidJS frontend will run on (default: 8095)
FRONTEND_PORT=8095

# Cache Configuration
# CACHE_DURATION_DAYS: How long to keep search results in sqlite before refetching (default: 5)
CACHE_DURATION_DAYS=5

# Feature Flags
# ENABLE_REAL_SCRAPING: Set to true to use real Flightplan tools (requires credentials below)
# ENABLE_REAL_SCRAPING=false

# Airline Credentials (optional - needed if scraping real sites)
# AEROPLAN_USERNAME=your_username
# AEROPLAN_PASSWORD=your_password
# ASIAMILES_USERNAME=
# ASIAMILES_PASSWORD=
# KRISFLYER_USERNAME=
# KRISFLYER_PASSWORD=
