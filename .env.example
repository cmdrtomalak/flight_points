# Backend Port
BACKEND_PORT=3000

# Frontend Port (for CORS configuration)
FRONTEND_PORT=8095

# Database Configuration
# Options: 'sqlite' or 'postgres'
# Default: 'sqlite'
DB_TYPE=sqlite

# SQLite Configuration
# Required for DB_TYPE=sqlite
# ALSO REQUIRED for 'bun run src/scripts/migrate.ts' (serves as the source of data)
DB_PATH=./data/flights.db

# PostgreSQL Configuration
# Required for DB_TYPE=postgres
# Required for 'bun run src/scripts/migrate.ts' (serves as the destination)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=flight_points_db

# Cache Duration (in days)
CACHE_DURATION_DAYS=5
