# Server Configuration
# BACKEND_PORT: The port the Bun server will run on (default: 3003)
BACKEND_PORT=3003

# Database Config
# Options: sqlite (default), postgres
DB_TYPE=sqlite
DB_PATH=./data/flights.db

# PostgreSQL Config (Only if DB_TYPE=postgres)
DATABASE_URL=postgresql://<postgres user>:<postgres pass>@localhost:5432/<db_name>

# Cache duration in days
CACHE_DURATION_DAYS=5

# Airline credentials (optional, for real scraping)
AEROPLAN_USERNAME=
AEROPLAN_PASSWORD=
ASIAMILES_USERNAME=
ASIAMILES_PASSWORD=
KRISFLYER_USERNAME=
KRISFLYER_PASSWORD=
